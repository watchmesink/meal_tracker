# Environment Variables for Meal Tracker App
# Copy this file to .env and fill in your values

# Google Gemini AI API Key (required)
# Get this from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Google OAuth 2.0 Credentials (required for authentication)
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Session Secret (required for secure sessions)
# Generate a random string for production
SESSION_SECRET=your_random_session_secret_here

# Base URL for OAuth callbacks
# For Railway: https://your-app-name.railway.app
# For local development: http://localhost:3000
BASE_URL=http://localhost:3000

# Port (Railway will set this automatically)
PORT=3000

# Node Environment (set to production for Railway)
NODE_ENV=production
